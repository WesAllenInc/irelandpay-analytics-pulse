{
  "crons": [
    {
      "path": "/api/cron/scheduled-sync",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/scheduled-sync", 
      "schedule": "0 20 * * *"
    }
  ],
  "functions": {
    "app/api/cron/sync/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/archive/route.ts": {
      "maxDuration": 300
    }
  },
  "buildCommand": "npm run build",
  "installCommand": "npm install --production=false --ignore-scripts"
}
